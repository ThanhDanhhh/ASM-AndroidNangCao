<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="200dp" android:layout_width="200dp" android:layout_centerHorizontal="true" android:layout_marginTop="100dp" android:id="@+id/friendProfilePicture"/>

    <com.facebook.login.widget.LoginButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="30dp" android:id="@+id/login_button" android:layout_below="@id/tv" android:layout_marginBottom="30dp"/>

    <com.facebook.share.widget.ShareButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/btnShare" android:layout_below="@id/login_button"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/tv" android:layout_below="@id/friendProfilePicture" android:textSize="25dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnShareDialog"
        android:layout_below="@+id/btnShare" android:text="Share Dialog"/>

    <ImageView android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgShare"
        android:layout_below="@id/btnShareDialog"
        android:src="@drawable/anhnen"/>

</RelativeLayout>